        <TextBlock x:Name="text1" HorizontalAlignment="Left" Margin="188,49,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Visibility="Collapsed"  />
        <Label x:Name="Label6"  Margin="19,69,28,0" VerticalAlignment="Top"  Height="28" FontSize="9" Visibility="Collapsed"  />

